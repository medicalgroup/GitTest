.content{
  width: 100%;
overflow: hidden;
}
.tap{
  margin: 0 10px
}
.top{
  font-size: 22px;
  font-weight: bold
}
.title{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  opacity: 0.6;
   margin-top: 10px;
}
.author{
  margin-right: 10px;
  margin-bottom: 20px
}
.til{
  text-indent: 35px;
    margin:  20px 0;
}
.little{
  font-size: 18px;
  font-weight: bold;
  color:  rgb(23, 195, 238)
}
.img image{
  width: 98%;
  height: 200px
}
.comment-detail-box {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  overflow-y: hidden;
}
.comment-main-box {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 100rpx;
  right: 0;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.bottom{
position: absolute;
    bottom: 0;
    left:0;
    right: 0;
    background-color: white;
    border-top:1rpx solid #D5D5D5;
    min-height: 100rpx;
    z-index: 1000;
}
.bottom .bottom-content{
    width: 100%;
    height: 100%;
    display: flex;
    padding: 20rpx 0;
}
.list{
  display: flex;
  flex-direction: row;
  width:100%
}
.list-content{
  width: 25%
}
.list-content image{
  width: 20px;
  height: 20px;
  margin-left: 40px
}
button::after {
  border: none;
}

.button {
  border: none;
  outline: none;
  background: transparent;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  right: 10%
}